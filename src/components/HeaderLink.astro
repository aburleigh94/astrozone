---
const { href, class: className, ...props } = Astro.props;
let isActive;

if (href === "/") {
  isActive = Astro.url.pathname === href;
} else {
  isActive = Astro.url.pathname.startsWith(href);
}
---

<a href={href} class:list={[className, "inline-block no-underline", { "font-bold underline decoration-2 underline-offset-4": isActive }]} {...props}>
  <slot />
</a>
